import nprogress from 'nprogress';
import {NoView, BehaviorProperty, CustomElement} from 'aurelia-framework';

@NoView
@BehaviorProperty('loading')
@CustomElement('loading-indicator')
export class LoadingIndicator {

  loadingChanged(newValue) {
    if (newValue) {
      nprogress.start();
    } else {
      nprogress.done();
    }
  }
}
